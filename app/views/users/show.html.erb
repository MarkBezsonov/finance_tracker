<h2>User Details</h2>

<div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td>
        <td><strong class="ml-4">Email: </strong> <%= @user.email %></td>
        <td>
          <% if current_user.not_friends_with?(@user.id) %> 
            <%= link_to 'Add to Friends List', friendships_path(friend: @user), class: "btn btn-xs btn-success ml-4", method: :post %>
          <% else %>
            <span class="badge badge-secondary ml-4">
              In Friends List
            </span>
          <% end %>
        </td>
      </tr>    
    </tbody>
  </table>  
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks at the moment.</p>
<% end %>